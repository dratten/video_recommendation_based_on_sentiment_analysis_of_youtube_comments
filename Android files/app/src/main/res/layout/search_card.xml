<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/video_card_thumbnail"
            android:layout_width="142dp"
            android:layout_height="80dp"
            android:src="@drawable/sample_thumbnail"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/thumbnail_border"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/video_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_guitar_chords_3"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_toEndOf="@id/video_card_thumbnail"
            android:maxWidth="150dp"
            android:maxLines="2"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/video_card_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simon Watson"
            android:textSize="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_regular"
            android:layout_toEndOf="@id/video_card_thumbnail"
            android:layout_below="@id/video_card_title"
            android:maxWidth="150dp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/video_card_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_play_button" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
