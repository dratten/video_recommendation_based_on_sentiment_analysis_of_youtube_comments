<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp">
        <ImageView
            android:id="@+id/home_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:background="@drawable/rounded_border"
            android:scaleType="centerCrop"
            android:padding="7dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="20dp"
            />
        <TextView
            android:id="@+id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="10dp"
            android:layout_toEndOf="@id/home_logo"/>
        <TextView
            android:id="@+id/home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michelle"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:layout_toEndOf="@id/home_logo"
            android:layout_below="@id/home_time"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/home_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/ic_search_selected"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:onClick="search"/>
        <TextView
            android:id="@+id/home_trending_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_name"
            android:text="@string/trending_categories"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="15dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/home_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_trending_header"
            android:backgroundTint="#02C4F4"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <ImageView
                    android:id="@+id/home_trending_icon"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:src="@drawable/sandt_icon"/>
                <TextView
                    android:id="@+id/home_trending_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/science_technology"
                    android:textSize="20dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textEnd"
                    android:lines="2"
                    android:layout_marginTop="25dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/home_recently_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_trending"
            android:text="@string/recently_viewed"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="15dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/home_recently"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_recently_header"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/home_recently_thumbnail"
                    android:layout_width="142dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sample_thumbnail"
                    android:scaleType="fitCenter"
                    android:layout_alignParentStart="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/thumbnail_border"
                    android:layout_marginEnd="20dp"
                    />
                <TextView
                    android:id="@+id/home_recently_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/learn_guitar_chords_3"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_toEndOf="@id/home_recently_thumbnail"
                    android:maxWidth="150dp"
                    android:maxLines="2"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/home_recently_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simon Watson"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_toEndOf="@id/home_recently_thumbnail"
                    android:layout_below="@id/home_recently_title"
                    android:maxWidth="150dp"
                    android:maxLines="1"/>
                <ImageView
                    android:id="@+id/home_recently_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_play_button"
                    android:background="@drawable/rounded_border"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>