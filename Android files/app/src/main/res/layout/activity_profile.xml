<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorSecondary"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <ImageView
        android:id="@+id/profile_edit_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:padding="15dp"
        android:clickable="true"
        android:onClick="back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/profile_edit_picture"
        android:text="Save Changes"
        android:textSize="10sp"
        android:textColor="@color/colorSecondary"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_light"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>
    <ImageView
        android:id="@+id/profile_edit_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_image"
        android:padding="10dp"
        android:layout_alignTop="@id/profile_edit_picture"
        android:layout_alignStart="@id/profile_edit_picture"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/colorSecondary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_edit_picture"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_rounded"
        android:backgroundTint="@color/colorPrimaryDark">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:layout_marginTop="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"/>
                <EditText
                    android:id="@+id/profile_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Michelle Axlerod"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_below="@id/profile_edit_name"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"/>
                <EditText
                    android:id="@+id/profile_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_edit_name"
                    android:paddingStart="10dp"
                    android:text="m.axelrod@billions.com"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>